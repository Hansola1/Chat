<UserControl x:Class="Chat.UserUseControl.UsersMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.UserUseControl"
             mc:Ignorable="d" d:DesignWidth="150" Height="63">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Name="SenderName" Text="" Foreground="#FF529AFF" FontSize="20" FontFamily="Trebuchet MS"/>
            <TextBlock Name="MessageText"  Text="" Foreground="Black" FontSize="20" FontFamily="Trebuchet MS"/>
            <TextBlock x:Name="TimeSent" Text="" Width="149" FontSize="12" Margin="0 0 0 0" Foreground="Gray" FontFamily="Trebuchet MS" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
